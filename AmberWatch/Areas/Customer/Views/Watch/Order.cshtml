@model AmberWatch.Areas.Customer.Models.WatchModel;
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Thanh Toán</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>

        .container {
            max-width: 1200px;
            margin: 30px auto;
        }

        .payment-method {
            border: 1px solid #3d3d3d;
            border-radius: 5px;
            padding: 15px;
            margin-bottom: 20px;
        }

        .payment-method:hover {
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }

        .order-summary {
            padding: 20px;
            border: 1px solid #3d3d3d;
            border-radius: 5px;
        }

        .order-summary h5 {
            margin-bottom: 15px;
        }

        .total-price {
            font-size: 18px;
            font-weight: bold;
        }

        .btn-pay {
            background-color: #0077f5;
            color: #fff;
        }

        .btn-pay:hover {
            background-color: #005bb5;
        }

        .col-6 p {
            font-size: 13px;
            margin-top: -6px;
        }

        .info p {
            display: flex;
            place-content: space-between;
        }

        .text-content {
            color: #4f555a;
        }

        .apply {
            margin-bottom: 10px;
        }

        .apply:checked {
            background-color: blue; /* Màu xanh lá */
            border-color: blue;
        }

        .btn {
            --bs-btn-border-color: none !important;
        }
    </style>
</head>

<body>
    <div class="container">
        <a href="javascript:history.back()">
            <i class="bi bi-arrow-left-short" style="color: rgb(0, 0, 0); font-size: 40px;"></i>
        </a>
        <h2 class="mb-4">Kiểm tra Thanh toán</h2>
        <div class="row">
            <!-- Payment Methods -->
            <div class="col-md-8">
                <div class="payment-method">
                    <h5>Thanh toán trực tiếp</h5>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" checked="true" name="paymentOption" id="rewardOption">
                        <label class="form-check-label" for="rewardOption">
                            Thanh toán giao dịch khi nhận hàng
                        </label>
                    </div>
                </div>
                <div class="payment-method">
                    <h5>Phương thức Thanh toán khác</h5>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="paymentOption" id="creditCardOption">
                        <label class="form-check-label" for="creditCardOption">
                            Tài khoản ngân hàng
                        </label>
                    </div>
                    <div class="form-check mt-3">
                        <input class="form-check-input" type="radio" name="paymentOption" id="paypalOption">
                        <label class="form-check-label" for="paypalOption">
                            <img src="https://www.paypalobjects.com/images/shared/paypal-logo-129x32.svg" alt="PayPal">
                        </label>
                    </div>
                </div>
            </div>
            <!-- Order Summary -->
            <div class="col-md-4">
                <div class="order-summary">
                    <h5>Tóm tắt đơn hàng</h5>
                    <div class="order-info col-12">
                        <div class="row">
                            <div class="col-6">
                                <img src="@Model.img" style="width: 100%;">
                            </div>
                            <div class="col-6">
                                <p>@Model.name</p>
                                <p class="text-content">@Model.brand</p>
                                <p class="text-content">@(Model.price)đ</p>

                            </div>
                        </div>
                    </div>
                    <div class="info">
                        <p class="text-content"><strong>Giá: </strong> @(Model.price)đ</p>
                        <p class="text-content"><strong>Giảm giá: </strong> @(Model.price * 0.1)đ</p>
                        <hr>
                        <p><strong>Total:</strong> <span class="text">@(Model.price * 0.9)đ</span></p>
                    </div>
                    <div>
                        <input type="checkbox" name="apply" class="apply" id="termsCheckbox">
                        <a style="color:#000000;">Bạn chấp nhận tất cả điều khoản bao gồm chính sách bảo mật, dịch
                            vụ,...</a>
                        <button style="background: dodgerblue;" class="btn btn-pay w-100 mt-3" id="payButton" disabled>Thanh toán</button>
                    </div>

                </div>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
<script>
    const checkbox = document.getElementById('termsCheckbox');
    const button = document.getElementById('payButton');

    // Theo dõi sự kiện thay đổi trạng thái của checkbox
    checkbox.addEventListener('change', function () {
        if (checkbox.checked) {
            // Kích hoạt nút khi checkbox được chọn
            button.disabled = false;
        } else {
            // Vô hiệu hóa nút khi checkbox không được chọn
            button.disabled = true;
        }
    });
</script>