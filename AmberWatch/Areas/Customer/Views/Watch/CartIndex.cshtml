@model AmberWatch.Areas.Customer.Models.HomeModel;

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Xe dành cho bạn</title>

    <!-- Include Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
</head>

<body>
    <div class="container mt-4">
        <a href="javascript:history.back()"><i class="bi bi-arrow-left-short"
                    style="color: rgb(0, 0, 0); font-size: 40px; margin-left: 10px;"></i></a>
        <!-- Thanh điều hướng ngang -->
        <ul class="nav nav-tabs" id="cartTabs">
            <li class="nav-item">
                <a class="nav-link active" id="cart-tab" data-bs-toggle="tab" href="#cartContent">🛒 Giỏ Hàng</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" id="orders-tab" data-bs-toggle="tab" href="#ordersContent">📦 Đơn Hàng</a>
            </li>
        </ul>

        <!-- Nội dung của Tabs -->
        <div class="tab-content mt-3">
            <!-- Tab Giỏ Hàng -->
            <div class="tab-pane fade show active" id="cartContent">
                <h3>🛒 Giỏ Hàng Của Bạn</h3>
                <div>
                     @Html.Partial("Cart", Model.Cart)

                </div>
                <div class="text-end">
                    <a href="@Url.Action("Checkout", "Cart")" class="btn btn-success">Thanh Toán</a>
                </div>
            </div>

            <!-- Tab Đơn Hàng -->
            <div class="tab-pane fade" id="ordersContent">
                <h3>📦 Đơn Hàng Đã Đặt</h3>
                <div>
                    @Html.Partial("Order", Model.Order)

                </div>
            </div>
        </div>
    </div>
</body>

</html>