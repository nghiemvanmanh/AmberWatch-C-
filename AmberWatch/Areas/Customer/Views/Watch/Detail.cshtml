@model AmberWatch.Areas.Customer.Models.WatchModel;

@{
    Layout = "~/Views/Shared/_Layout.cshtml"; // Nếu có sử dụng Layout
}

<!DOCTYPE html>
<html lang="vi">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chi tiết đồng hồ</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <style>
        .detail-box {
            background: #f8f9fa;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .detail-box p {
            margin-bottom: 8px;
        }
    </style>
</head>

<body>
    <div class="container mt-5">
        <a href="javascript:history.back()"><i class="bi bi-arrow-left-short"
                style="color: rgb(0, 0, 0); font-size: 40px; margin-left: -10px;"></i></a>
        <div>
            <div style="margin-top: 70px;">
                <div class="col-md-6 text-center">
                    <div class="row" style="flex-wrap: nowrap;">
                        <div>

                            <img src="@Model.img" alt="@Model.name"  width="300">
                        </div>
                        <div>
                            <h2 class="mb-3 text-primary text-center">@Model.name</h2>
                            <div style="display: flex; justify-content: center; font-size: 20px;">
                                <p class="text-decoration-line-through text-muted">@($"{Model.price:0,0}₫") </p>
                                <p class="fw-bold" style="margin-left: 15px;">@($"{( Model.price) * 90 / 100:0,0}₫")</p>
                            </div>
                            <div style="display: flex; justify-content: center;">
                                <p class="fw-bold">(Giá bạn tiết kiệm:</p>
                                <p class="fw-bold" style="margin-left: 15px; color: red;">@($"{(Model.price) * 10 / 100:0,0}₫"))</p>
                            </div>
                            <div class="text-start">
                                <img src="https://pic.pikbest.com/19/85/33/25J888piCDIr.jpg!sw800" width="24" height="24">
                                <strong  style="color: green;">SẴN HÀNG</strong>
                            </div>
                            
                            <p class="text-start">@Model.description</p>
                            @if(Context.Session.GetString("User") == null){
                                <a href="@Url.Action("Login","Account", new { area = ""})" class="btn btn-primary w-100">Đặt hàng</a>
                            }else{
                                <a href="@Url.Action("Order","Watch" , new { id = Model.id_watch})" class="btn btn-primary w-100">Đặt hàng</a>
                            }
                            
                            <div class="container mt-4">
                            <div class="row text-center">
                                <div class="col-md-4 mb-3">
                                    <img src="https://th.bing.com/th/id/OIP.ZWX6orAtdARkN-CISQctogHaHa?w=171&h=180&c=7&r=0&o=5&dpr=1.3&pid=1.7" width="50">
                                    <p><strong>Bảo Hành 5 Năm</strong></p>
                                </div>
                                <div class="col-md-4 mb-3">
                                    <img src="https://th.bing.com/th/id/OIP.pSGeoYGK06ghzpHJ8JPKRwHaHa?w=181&h=181&c=7&r=0&o=5&dpr=1.3&pid=1.7" width="50">
                                    <p><strong>100% Chính Hãng</strong></p>
                                </div>
                                <div class="col-md-4 mb-3">
                                    <img src="https://png.pngtree.com/png-vector/20210710/ourlarge/pngtree-black-free-shipping-png-image_3577608.jpg" width="50">
                                    <p><strong>Miễn Phí Vận Chuyển</strong></p>
                                </div>
                                <div class="col-md-4 mb-3">
                                    <img src="https://th.bing.com/th/id/OIP.znm3aBDA9D7dFyhmEtZnMQHaG4?w=188&h=180&c=7&r=0&o=5&dpr=1.3&pid=1.7" width="50">
                                    <p><strong>Sản Phẩm Đa Dạng</strong></p>
                                </div>
                                <div class="col-md-4 mb-3">
                                    <img src="https://th.bing.com/th/id/OIP.GVGpWFro_e6769E_VOb_uQHaHa?w=194&h=194&c=7&r=0&o=5&dpr=1.3&pid=1.7" width="50">
                                    <p><strong>Nhân Viên Nhiệt Tình</strong></p>
                                </div>
                                <div class="col-md-4 mb-3">
                                    <img src="https://th.bing.com/th/id/OIP.gkWLibtMKZ3vEk2qpPgHOQHaHa?w=183&h=183&c=7&r=0&o=5&dpr=1.3&pid=1.7" width="50">
                                    <p><strong>Đổi Trả Hàng 7 Ngày*</strong></p>
                                </div>
                            </div>
                        </div>

                    </div>
                        </div>

                </div>
                <div class="col-md-6 detail-box">
                    <h2>Thông tin bổ sung</h2>
                    <hr>
                    <p><strong>Thương hiệu:</strong> @Model.model</p>
                    <hr>
                    <p><strong>Hãng:</strong> @Model.brand</p>
                    <hr>
                    <p><strong>Bảo hành:</strong> @Model.insurance</p>
                    <hr>
                    <p><strong>Màu mặt số:</strong> @Model.dialcolor</p>
                    <hr>
                    <p><strong>Màu dây:</strong> @Model.wirecolor</p>
                    <hr>
                    <p><strong>Màu vỏ:</strong> @Model.shellcolor</p>
                    <hr>
                    <p><strong>Loại mặt số:</strong> @Model.dialtype</p>
                    <hr>
                    <p><strong>Loại dây:</strong> @Model.wiretype</p>
                    <hr>
                    <p><strong>Loại kính:</strong> @Model.grasstype</p>
                    <hr>
                    <p><strong>Loại máy:</strong> @Model.machinetype</p>
                    <hr>
                    <p><strong>Size mặt số:</strong> @Model.dialsize</p>
                    <hr>
                    <p><strong>Độ dày mặt số:</strong> @Model.dialthickness</p>
                    <hr>
                    <p><strong>Giới tính:</strong> @Model.sex</p>
                    <hr>
                    <p><strong>Chất liệu vỏ:</strong> @Model.shellmaterial</p>
                    <hr>


                </div>
            </div>

        </div>

    </div>
</body>

</html>