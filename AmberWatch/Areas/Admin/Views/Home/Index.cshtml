@{
    ViewData["Title"] = "Trang Quản Trị";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }
        .container {
            max-width: 900px;
        }
        .card {
            transition: transform 0.2s ease-in-out;
        }
        .card:hover {
            transform: scale(1.05);
        }
    </style>
</head>
<body>
    <div class="container text-center">
            <h2 class="mb-4">Trang Quản Trị <a class="navbar-brand text-warning fw-bold" asp-area="Customer" asp-controller="Home" asp-action="Index">AMBERWATCH.COM</a></h2>
        
        <div class="row">
            <div class="col-md-4">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">Quản Lý Tài Khoản</h5>
                        <p class="card-text">Quản lý người dùng, phân quyền và thông tin tài khoản.</p>
                        <a href="@Url.Action("Account", "Home")" class="btn btn-primary">Đi đến</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">Quản Lý Bài Viết</h5>
                        <p class="card-text">Tạo, chỉnh sửa và xóa các bài viết trên hệ thống.</p>
                        <a href="@Url.Action("Post", "Home")" class="btn btn-success">Đi đến</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">Quản Lý Đồng Hồ</h5>
                        <p class="card-text">Thêm, chỉnh sửa và quản lý sản phẩm đồng hồ.</p>
                        <a href="@Url.Action("Watch", "Home")" class="btn btn-warning">Đi đến</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
